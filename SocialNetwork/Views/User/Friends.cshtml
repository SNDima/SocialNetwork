@model IEnumerable<SocialNetwork.Models.ApplicationUser>

@{
    ViewBag.Title = "Friends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>@ViewBag.Title</h2></center>

<table class="table">
    <tr>
        <th style="text-align:center">
            First Name
        </th>
        <th style="text-align:center">
            Last Name
        </th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr align="center">
            <td>
                @user.FirstName
            </td>
            <td>
                @user.LastName
            </td>
            <td>
                @Html.ActionLink("New message >>", "Create", "Conversation", new { recipientId = @user.Id }, null)
            </td>
        </tr>
    }

</table>