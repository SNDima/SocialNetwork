@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    @Styles.Render("~/Content/elements.css")
}

<h2>Новое сообщение</h2>

<div class="main">
    <div id="chatBody">
        <div id="header"><h3>Добро пожаловать, @ViewBag.SenderName</h3></div>
        <hr />
        <form method="post" action="" onsubmit="return send()">
            <input type="hidden" name="recipientsIds" />
            <h4>Введите сообщение:</h4>
            <input type="text" class="form-control" name="Content" />
            <input type="submit" class="btn btn-default" value="Отправить" />
        </form>
        <hr/>
        <div id="chatusers">
            <p><b>Получатель:</b>
            </p>
            <p id="@ViewBag.RecipientId">
                <b id="recipientName">@ViewBag.RecipientName</b>
                <img src="~/Content/Images/minus.png" onclick="removeUser('@ViewBag.RecipientId', '@ViewBag.RecipientName')"/>
            </p>
        </div>
        <div id="hiddenSpace">
            <div id="popup">
                <div id="form">
                    <img id="close" src="~/Content/Images/close.png" onclick="hide()">
                    <h3>Friends</h3>
                    <hr>
                    <table id="friendsTable">
                    </table>
                    <input type="button" class="btn btn-success" value="OK" onclick="hide()"/>
                </div>
            </div>
        </div>
        <input type="button" id="addButton" class="btn btn-default" onclick="addUsers()" value="Добавить"/>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/conversation.create.js")
}